<?xml version="1.0" encoding="utf-8"?>


<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_theme"
    android:gravity="start"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:showDividers="middle">
    </LinearLayout>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1" />
    <TextView
        android:id="@+id/EndGameTitleLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_box"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:textColor="#6728A7"
        android:backgroundTint="#FFFFFF"
        android:text="Opa! Parece que o jogo acabou x.x'"
        android:textSize="18dp"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/EndGameScoreLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_box"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:textColor="#6728A7"
        android:backgroundTint="#FFFFFF"
        android:text="Seu Score final é: {SCORE-FINAL}"
        android:textSize="18dp"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/RightAnswersLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_box"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:textColor="#6728A7"
        android:backgroundTint="#FFFFFF"
        android:text="Você acertou: {respostas certas} perguntas"
        android:textSize="18dp"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/WrongAnswersLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_box"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:textColor="#6728A7"
        android:backgroundTint="#FFFFFF"
        android:text="Você errou: {respostas erradas} perguntas"
        android:textSize="18dp"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/leaderboardRegisterInput"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="36dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:padding="8dp"
        android:fontFamily="@font/sansita"
        android:hint="Você quer se cadastrar no nosso ranking?
         \nÉ só colocar seu nome aqui e clicar no botão =) "
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/leaderboardRegisterButton"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#9000A9"
        android:fontFamily="@font/sansita"
        android:text="QUERO ENTRAR NO RANKING!"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/homeButton"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="100dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#444444"
        android:fontFamily="@font/sansita"
        android:text="Voltar ao menu inicial"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5" />


</androidx.appcompat.widget.LinearLayoutCompat>