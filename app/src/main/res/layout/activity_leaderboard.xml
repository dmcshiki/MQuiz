<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_theme"
    android:gravity="start"
    tools:context=".MainActivity">

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.8" />

    <TextView
        android:id="@+id/position1"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/sansita"
        android:text="1° Lugar"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/userRank1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_box"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:textColor="#6728A7"
        android:backgroundTint="#FFFFFF"
        android:text="Jogador 1"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/position2"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/sansita"
        android:text="2° Lugar"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/userRank2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_box"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:textColor="#6728A7"
        android:backgroundTint="#FFFFFF"
        android:text="Jogador 2"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/position3"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/sansita"
        android:text="3° Lugar"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/userRank3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_box"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:textColor="#6728A7"
        android:backgroundTint="#FFFFFF"
        android:text="Jogador 3"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/position4"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/sansita"
        android:text="4° Lugar"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/userRank4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_box"
        android:layout_margin="20dp"
        android:padding="18dp"
        android:textColor="#6728A7"
        android:backgroundTint="#FFFFFF"
        android:text="Jogador 4"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/position5"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/sansita"
        android:text="5° Lugar"
        android:textAlignment="center"
        android:textSize="14dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/userRank5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_box"
        android:layout_margin="20dp"
        android:padding="18dp"
        android:textColor="#6728A7"
        android:backgroundTint="#FFFFFF"
        android:text="Jogador 5"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="16dp"/>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <TextClock
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="96dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#6728A7"
        android:padding="8dp"
        android:fontFamily="@font/sansita"
        android:text="Hora"
        android:textAlignment="center"
        android:textStyle="bold"/>


</androidx.appcompat.widget.LinearLayoutCompat>