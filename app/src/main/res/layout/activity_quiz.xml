<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_theme"
    android:gravity="start"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:showDividers="middle">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/skipButton"
            app:cornerRadius="1000dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:textColor="#6728A7"
            android:padding="8dp"
            android:text="Pular"
            android:textSize="16dp"
            android:fontFamily="@font/sansita"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <View android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/resignButton"
            app:cornerRadius="1000dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:textColor="#6728A7"
            android:padding="8dp"
            android:text="Desistir"
            android:textSize="16dp"
            android:fontFamily="@font/sansita"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <View android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/hintButton"
            app:cornerRadius="1000dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:textColor="#6728A7"
            android:padding="8dp"
            android:text="Dica"
            android:textSize="16dp"
            android:fontFamily="@font/sansita"
            android:textAlignment="center"
            android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/questionLbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/question_box"
        android:layout_margin="20dp"
        android:padding="16dp"
        android:textColor="#6728A7"
        android:backgroundTint="#FFFFFF"
        android:text="Quanto Ã©: {aqui vai a pergunta}?"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24dp"/>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.1" />

    <TextView
        android:id="@+id/timerLbl"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="150dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/sansita"
        android:text="{TEMPO EM SEGUNDOS}"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/answer1"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="36dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#6728A7"
        android:padding="8dp"
        android:fontFamily="@font/sansita"
        android:text="{Respoosta 1}"
        android:textAlignment="center"
        android:textSize="18dp"
        android:textStyle="bold"/>
    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="1000dp"
        android:id="@+id/answer2"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="36dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#6728A7"
        android:padding="8dp"
        android:fontFamily="@font/sansita"
        android:text="{Respoosta 2}?"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/answer3"
        app:cornerRadius="1000dp"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="36dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#6728A7"
        android:padding="8dp"
        android:fontFamily="@font/sansita"
        android:text="{Respoosta 3}?"
        android:textSize="18dp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="1000dp"
        android:id="@+id/answer4"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="36dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#6728A7"
        android:padding="8dp"
        android:text="{Respoosta 4}"
        android:textSize="18dp"
        android:fontFamily="@font/sansita"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3" />

    <com.google.android.material.button.MaterialButton
        app:cornerRadius="1000dp"
        android:id="@+id/answer5"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="36dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#6728A7"
        android:padding="8dp"
        android:fontFamily="@font/sansita"
        android:textSize="18dp"
        android:text="{Respoosta 5}"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <View android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Aqui vai ficar o timer das perguntas -->
    <TextClock
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="96dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:textColor="#6728A7"
        android:padding="8dp"
        android:fontFamily="@font/sansita"
        android:text="Hora"
        android:textAlignment="center"
        android:textStyle="bold"/>


</androidx.appcompat.widget.LinearLayoutCompat>